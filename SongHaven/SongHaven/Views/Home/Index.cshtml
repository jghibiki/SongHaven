@model IEnumerable<SongHaven.Song>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Now Playing: </h1>
    <h2>@ViewBag.NowPlaying.ToString()</h2>
</div>

<h2>Messages</h2>
<form action="~/Home/Index" method="post">
<table class="table">
    <tr>
        <th>
            Date made
        </th>
        <th>
            Content
        </th>
        <th>
            User
        </th>
    </tr>

    @foreach (var item in ViewBag.Messages)
    {
        <tr>
            <td>
                @item.date_created
            </td>
            <td>
                @item.content
            </td>
            <td>
                @item.User.nvc_username
            </td>
        </tr>
    }
    <tr>
        <th>
            <input type="text" id="newContent" />
        </th>
        <th>
            <input type="submit" />
        </th>
    </tr>
</table>
</form>
    <form action="~/Home/Index" method="post">
    <label>Select file: <input id="File1" type="file" accept="mp3" multiple="true" /></label>
    <input type="submit" value="upload" />
    </form>

    <h2>Request Queue</h2>

    <table class="table">
        <tr>
            <th>
                Song
            </th>
            <th>
                Date Requested
            </th>
            <th>
                Requested By
            </th>
        </tr>

        @foreach (var item in ViewBag.Requests)
        {
            <tr>
                <td>
                    @item.dt_created_date
                </td>
                <td>
                    @item.Song.nvc_title
                </td>
                <td>
                    @item.User.nvc_username
                </td>
            </tr>
        }

    </table>


    <h2>Songs</h2>
    <table class="table">
        <tr>
            <th>
                Song
            </th>
            <th>
                Artist
            </th>
            <th>
                Album
            </th>
            <th>
                Plays
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nvc_title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nvc_artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nvc_album)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.int_number_of_plays)
                </td>
                <td>
                    @Html.ActionLink("Request", "Request", new { id = item.guid_id })
                </td>
            </tr>
        }
    </table>


